@using EasyLife.Web.Models.Common.Modals
@model EasyLife.Web.Models.Personal.EncryptedImportantThings.ImportantInformationListViewModel
@{ Layout = null; }

<style>
    .section-title {
        display: block;
        border-bottom: solid 1px #ddd;
        margin-bottom: 0;
        color: #003e80
    }
</style>

<div class="modal fade" id="EncryptedImportantInformationCreateModal" tabindex="-1" role="dialog" aria-labelledby="EncryptedImportantInformationCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Add Important Information"))
            <form name="encryptedImportantInformationForm" role="form" class="form-horizontal">
                <div class="modal-body" style="height:500px; overflow:auto;">
                    <div class="row col-md-12">
                        <div class="col-md-6 form-group required">
                            <label for="Title">Title</label>
                            <input id="Title" type="text" name="Title" class="form-control" required>
                        </div>
                    </div>
                    <div class="row col-md-12">
                        <div class="col-md-12 form-group required">
                            <label for="EncryptedText">Information (This information will be saved as encrypted form)</label>
                            <textarea id="EncryptedText" name="EncryptedText" class="form-control" style="height:500px"></textarea>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
