<div class="abp-advanced-search">
    <form id="EarningsSearchForm" class="form-horizontal">
        <div class="input-group">
            <input type="text" name="Keyword" class="form-control txt-search" placeholder="Search Payee" />
            @*<div class="input-group-prepend">
                    <button type="button" class="btn bg-white btn-search border-1" id="searchbutton">
                        <span class="fas fa-search" aria-hidden="true"></span>
                    </button>
                </div>*@
            &nbsp;
            @{ Model.EarningCategoryList.Insert(0, new SelectListItem() { Text = "-- All Category --", Value = "" }); }
            @Html.DropDownList("EarningCategoryFilterId", Model.EarningCategoryList, new { @class = "form-control", @required = "required", @name = "EarningCategoryFilterId" })
