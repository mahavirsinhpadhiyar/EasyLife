@using Abp.Authorization.Users
@model EasyLife.Web.Models.Account.ResetPasswordViewModel
@{ ViewBag.Title = L("ResetPassword"); }
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Account/ResetPassword.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Account/ResetPassword.min.js" asp-append-version="true"></script>
    </environment>
}
<h4 class="text-center">@L("ResetPassword")</h4>
<form id="ResetPasswordForm" asp-action="ResetPassword" method="post">
    @*<div class="input-group mb-3">
            <input type="password" class="form-control" name="Password" id="Password" required maxlength="@AbpUserBase.MaxPlainPasswordLength" autofocus>
        </div>*@

    <input type="hidden" name="UserId" id="UserId" value="@Model.UserId" />
    <input type="hidden" name="ResetCode" id="ResetCode" value="@Model.ResetCode" />
    <div class="form-group row required">
        <label class="col-md-3 col-form-label">@L("Password")</label>
        <div class="col-md-9">
            <input type="password" class="form-control" name="NewPassword" id="NewPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
        </div>
    </div>
    <div class="form-group row required">
        <label class="col-md-3 col-form-label">@L("ConfirmPassword")</label>
        <div class="col-md-9">
            <input type="password" class="form-control" name="ConfirmPassword" id="ConfirmPassword" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" id="LoginButton" class="btn btn-primary btn-block"><i class="fa fa-check"></i> @L("Submit")</button>
        </div>
    </div>
</form>